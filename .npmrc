# Prevent URL imports from being treated as dependencies
public-hoist-pattern[]=*
shamefully-hoist=true
strict-peer-dependencies=false
# Explicitly ignore URL imports
ignore-pattern=^https?:\/\/
# Ignore Supabase functions during installation
ignore-workspace-root-check=true
# Disable saving exact versions
save-exact=false
# Disable saving prefixes
save-prefix=''
